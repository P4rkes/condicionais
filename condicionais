// exercicio 5

const produto = {
    nome: 'cavalo emo',
    preco: 70,
    desconto: 10,
    freteGratis: true,

}

console.log("calculando preco do", produto.nome)

if (produto.desconto > 0) {
    if(produto.freteGratis){
        console.log("com o frete gratis e o desconto de 10 reais pelo cavalo ser emo, o valor total fica:", produto.preco - produto.desconto)
    } else {
        console.log("com o produto com desconto e sem frente gratis, o preco fica", produto.preco + 25)
    }
}else {
    if (!produto.freteGratis){
    console.log("sem desconto e sem frete gratis, o valor final fica:", produto.preco)
}else{
console.log("com o", produto.nome, "custando", produto.preco, "e sem cupom de desconto, o valor total fica:", produto.preco)
}
}
